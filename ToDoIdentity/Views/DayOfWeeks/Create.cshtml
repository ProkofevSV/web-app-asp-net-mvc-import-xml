@using ToDoIdentity.Models
@model ToDoIdentity.Models.DayOfWeek

<h2>День недели</h2>
<br />


<fieldset>
    <legend><h3>Пожалуйста, заполните необходимые поля</h3></legend>
    @using (Html.BeginForm("Create", "DayOfWeeks", FormMethod.Post))
    {
        @Html.EditorForModel()

        <input type="submit" value="Сохранить" class="btn btn-secondary" />
        @Html.ActionLink("Отменить", "Index", "DayOfWeeks", null, new { @class = "btn btn-danger" })
    }
</fieldset>