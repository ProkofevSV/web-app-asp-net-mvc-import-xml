@using ToDoIdentity.Models
@model Task

<fieldset>
    <legend>Пожалуйста, заполните необходимые поля</legend>
    @using (Html.BeginForm("Create", "Tasks", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.EditorForModel()
        <input type="submit" value="Сохранить" class="btn btn-secondary" />
        @Html.ActionLink("Отменить", "Index", "Tasks", null, new { @class = "btn btn-danger" })
    }
</fieldset>

