@using ToDoIdentity.Models
@model Topic

<fieldset>
    <legend>Пожалуйста, заполните необходимые поля</legend>
    @using (Html.BeginForm("Create", "Topics", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.EditorForModel()
        <input type="submit" value="Сохранить" class="btn btn-secondary" />
        @Html.ActionLink("Отменить", "Index", "Topics", null, new { @class = "btn btn-danger" })
    }
</fieldset>

